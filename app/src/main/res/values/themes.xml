<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Theme.Wheelify" parent="Theme.Material3.DayNight">
            <!-- Primary colors -->
            <item name="colorPrimary">@color/purple_primary</item>
            <item name="colorPrimaryContainer">@color/purple_primary</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary colors -->
            <item name="colorSecondary">@color/purple_secondary</item>
            <item name="colorSecondaryContainer">@color/purple_primary</item>
            <item name="colorOnSecondary">@color/white</item>
            <!-- Status bar -->
            <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        </style>
    </resources>
