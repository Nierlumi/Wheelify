<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Wheelify" parent="Theme.Material3.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/gray700</item>
        <item name="colorPrimaryContainer">@color/gray800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/gray600</item>
        <item name="colorSecondaryContainer">@color/gray500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
    </style>
</resources>
